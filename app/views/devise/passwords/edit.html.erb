<div class="devise-form devise-update-password">
  <h2><%= t('.change_your_password', default: 'Change your password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'reset-password' }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <div class="field">
      <%= f.label t('activerecord.attributes.user.password'), class: "label" %>
      <div class="control">
        <%= f.password_field :password, class: "input" %>
      </div>
    </div>
    <div class="field">
      <%= f.label t('activerecord.attributes.user.password'), class: "label" %>
      <div class="control">
        <%= f.password_field :password, class: "input" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit t('.change_my_password', default: 'Change my password'), class: 'button' %>
    </div>
    <div class="shared">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>

<%= foundation_devise_error_messages! %>
<div class="row">
  <div class="medium-6 medium-centered columns">
    <div class="login-box">
      <div class="row">
        <div class="large-12 columns">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: resource.is_a?(User)) do |f| %>
            <div class="row">
              <h5 class="text-center">
                <%= t('.sign_in', :default => "Sign in") %>
                <%= 'admin' if resource.is_a?(Admin) %>
              </h5>
            </div>
            <div class="row">
              <%= f.email_field :email, autofocus: true, class: "large-12 columns", placeholder: t('activerecord.attributes.user.email') %>
            </div>
            <div class="row">
              <%= f.password_field :password, autocomplete: "off", class: "large-12 columns", placeholder: t('activerecord.attributes.user.password') %>
            </div>
            <div class="row status-message">
              <p class="error"></p>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="row">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <div class="row">
              <%= f.submit  t('.sign_in', :default => "Sign in"), class: "button expand large-12 large-centered columns submit" %>
              <div class="button expand large-12 large-centered columns loader-wrapper hide">
                <div class="loader">
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

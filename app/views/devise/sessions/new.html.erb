<div class="devise-form devise-new-session">
  <h2><%= t('.sign_in') %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'label' %>
      <div class="control">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label t('activerecord.attributes.user.password'), class: "label" %>
      <div class="control">
      <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
    </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label t('activerecord.attributes.user.remember_me') %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit t('.sign_in'), class: "button" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>

</div>

<h1 class="traceur-title"><%= @tracer.name %></h1>
<div class="tracer-container">
    <div class="card">
        <%= image_tag @tracer.photo.url, class: 'image' %>
        <div class="description">
            <p><%= @tracer.description %></p>
        </div>
        <div class="report-form">
            <%= render 'reports/new', tracer: @tracer %>
        </div>
    </div>
</div>

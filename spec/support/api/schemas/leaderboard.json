{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["name", "reports_count", "last_activity"],
    "properties": {
      "name": { "type": "string" },
      "reports_count": { "type": "integer" },
      "last_activity": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" }
    }
  },
  "additionalProperties": false
}
